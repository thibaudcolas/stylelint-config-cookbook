{
  "name": "@thibaudcolas/stylelint-config-cookbook",
  "version": "2.0.1",
  "main": "src/config.js",
  "description": "Shareable stylelint config for CSS and SCSS, with a strict baseline",
  "author": "Thibaud Colas",
  "license": "MIT",
  "keywords": [
    "stylelint",
    "config",
    "stylelint-config",
    "lint",
    "styleguide",
    "itcss",
    "bem"
  ],
  "files": [
    "src/config.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/thibaudcolas/stylelint-config-cookbook.git"
  },
  "bugs": {
    "url": "https://github.com/thibaudcolas/stylelint-config-cookbook/issues"
  },
  "homepage": "https://github.com/thibaudcolas/stylelint-config-cookbook",
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "@semantic-release/changelog": "^3.0.0",
    "@semantic-release/exec": "^3.1.3",
    "@semantic-release/git": "^7.0.4",
    "danger": "^4.0.1",
    "eslint": "^5.4.0",
    "jest": "^23.5.0",
    "prettier": "^1.17.0",
    "semantic-release": "^15.9.15",
    "stylelint": "^10.0.1",
    "stylelint-find-new-rules": "^1.0.1"
  },
  "dependencies": {
    "stylelint-a11y": "^1.1.11",
    "stylelint-config-prettier": "^5.0.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-declaration-block-no-ignored-properties": "^1.1.0",
    "stylelint-declaration-strict-value": "^1.1.2",
    "stylelint-no-unsupported-browser-features": "^3.0.2",
    "stylelint-scss": "^3.5.4"
  },
  "peerDependencies": {
    "stylelint": "^10.0.1"
  },
  "scripts": {
    "lint": "eslint . && prettier --check '**/*.{js,md,css,scss,yaml,yml,json}'",
    "format": "prettier --write '**/*.{js,md,css,scss,yaml,yml,json}'",
    "build:docs": "node src/documentation.js",
    "test": "jest",
    "test:rules": "! stylelint-find-new-rules src/config.js --no-u --deprecated --invalid | tee /dev/tty | grep -e [INVALID] -e [DEPRECATED] -c -q",
    "test:watch": "jest --watch",
    "test:ci": "npm run lint && npm run test && npm run test:rules",
    "danger": "danger ci --verbose",
    "semantic-release": "semantic-release",
    "prepare": "./.githooks/deploy.sh"
  }
}
